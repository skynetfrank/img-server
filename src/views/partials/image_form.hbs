<div class="row mt-3">
 <div class="col-md-5">
   <div class="card bg-success">
     <div class="card-body">

      <form action="/images/add" method="POST" enctype="multipart/form-data">
        <div class="form-group">
           <label class="font-weight-bold">Titulo</label>
            <input type="text" name="nombre" class="form-control" placeholder="nombre del producto (debe ser unico)">
        </div>
        <div class="form-group">
            <label class="font-weight-bold">Marca</label>
            <input type="text" name="marca" class="form-control" placeholder="ejemplo: divinas-tentaciones">
        </div>
        <div class="form-group">
            <label class="font-weight-bold">Categoria</label>
            <input type="text" name="categoria" class="form-control" placeholder="ejemplo: tortas o panetones o dulces">
        </div>
        <div class="form-group">
            <label class="font-weight-bold">Descripcion</label>
          <textarea name="descripcion" class="form-control" placeholder="Escribe una pequeÃ±a descripcion del producto maximo 2 lineas"></textarea>
        </div>      
        <div class="input-group">
          <div class="custom-file">
              <input type="file" name="image" id="formFile" class="custom-file-input">
              <label for="formFile" class="custom-file-label">Selecciona la imagen en tu equipo</label>
          </div>
        </div>  
        <button class="btn btn-primary mt-3">Sube tu Imagen al servidor</button>    
      </form>
     </div>    
    </div>
  </div> 

     <div class="col-md-7" >
        <table class="table table-sm  table-bordered">
           <thead class="bg-success align-center">
                 <tr>
                    <th class="text-center">Titulo (imagenes ya subidas al servidor)</th>
                    <th class="text-center">menu-acciones</th>
                 </tr>
           </thead>
           <tbody>
                  {{#each result}}
                 <tr>
                    <td>{{this.[1]}}</td>
                    <td class="text-center">
                       <a href="{{this.[5]}}" target="_blank" class="btn btn-primary">Ver</a>  
                       <a href="/images/delete/{{this.[0]}}" class="btn btn-danger">Eliminar</a>  
                    </td>
                 </tr>
                    {{/each}}
           </tbody>
      </table>
   </div>
</div>
